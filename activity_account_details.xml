<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
android:focusableInTouchMode="true"
    android:focusable="true"
    android:id="@+id/topLinearLayout"
    android:background="@color/layout_bgcolor"
    >

    <LinearLayout
        android:focusable="true"

        android:focusableInTouchMode="true"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_margin="30dp"
        android:background="@drawable/usercreation_bg"
        android:orientation="vertical"
        android:paddingTop="20dp">
        <ImageView
            android:id="@+id/profileImage_AD"
            android:layout_gravity="center_horizontal"
            android:src="@drawable/unknwnimg"
            android:layout_width="110dp"
            android:layout_height="110dp" />

        <android.support.design.widget.TextInputLayout
            android:layout_width="match_parent"
            android:id="@+id/firstNameTextLayout_AD"
            android:layout_height="wrap_content"
            android:layout_marginLeft="32dp"
            android:layout_marginRight="32dp">

            <android.support.v7.widget.AppCompatEditText
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:id="@+id/firstnameField_AD"
                android:layout_margin="16dp"
                android:hint="Firstname" />
        </android.support.design.widget.TextInputLayout>


        <!--LastName-->
        <android.support.design.widget.TextInputLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:id="@+id/lastNameTextLayout_AD"
            android:layout_marginLeft="32dp"
            android:layout_marginRight="32dp">

            <android.support.v7.widget.AppCompatEditText
                android:layout_width="match_parent"
                android:id="@+id/lastnameField_AD"
                android:layout_height="wrap_content"
                android:layout_margin="16dp"
                android:hint="Lastname" />
        </android.support.design.widget.TextInputLayout>

        <!--email-->
        <android.support.design.widget.TextInputLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:id="@+id/emailTextLayout_AD"
            android:layout_marginLeft="32dp"
            android:layout_marginRight="32dp">

            <android.support.v7.widget.AppCompatEditText
                android:layout_width="match_parent"
                android:id="@+id/emailField_AD"
                android:inputType="textEmailAddress"
                android:layout_height="wrap_content"
                android:layout_margin="16dp"
                android:hint="Email" />
        </android.support.design.widget.TextInputLayout>

        <!--password-->

        <android.support.design.widget.TextInputLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginLeft="32dp"
            android:id="@+id/phoneNumberTextLayout_AD"
            android:layout_marginRight="32dp">

            <android.support.v7.widget.AppCompatEditText
                android:inputType="number"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_margin="16dp"
                android:id="@+id/phonenumField_AD"
                android:hint="Phone number" />
        </android.support.design.widget.TextInputLayout>

        <Button
            android:id="@+id/singout_btn"
            android:text="Proceed"
            android:textColor="@android:color/white"
            android:textAllCaps="false"
            android:background="@drawable/signup_bg"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginLeft="80dp"
            android:layout_marginTop="60dp"
            android:layout_marginRight="80dp" />


    </LinearLayout>

</LinearLayout>
    <LinearLayout

        android:visibility="invisible"
        android:id="@+id/pbarlayout_ADetails"
        android:gravity="center"
        android:background="#99000000"
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <com.wang.avi.AVLoadingIndicatorView
            android:layout_width="60dp"
            android:id="@+id/avlbar_ADetails"
            app:indicatorColor="#22a7f9"
            android:layout_height="60dp"
            app:indicatorName="LineScaleIndicator"
            />
    </LinearLayout>
</RelativeLayout>